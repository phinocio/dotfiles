#!/usr/bin/env bash

DOTFILES=$(cd $(dirname "${BASH_SOURCE[0]}") && pwd)

rm -rf $XDG_CONFIG_HOME/kitty
ln -s $DOTFILES/kitty $XDG_CONFIG_HOME/kitty

rm -rf $XDG_CONFIG_HOME/conky
ln -s $DOTFILES/conky $XDG_CONFIG_HOME/conky

rm -rf $XDG_CONFIG_HOME/newsboat
ln -s $DOTFILES/newsboat $XDG_CONFIG_HOME/newsboat

mkdir -p $XDG_CONFIG_HOME/tmux
rm -rf $XDG_CONFIG_HOME/tmux/tmux.conf
ln -s $DOTFILES/tmux/tmux.conf $XDG_CONFIG_HOME/tmux/tmux.conf

mkdir -p $HOME/.local/bin

rm -rf $HOME/.local/bin/t
ln -s $DOTFILES/scripts/t $HOME/.local/bin/t

rm -rf $XDG_CONFIG_HOME/nvim
ln -s $DOTFILES/nvim $XDG_CONFIG_HOME/nvim

rm -rf $XDG_CONFIG_HOME/phpactor
ln -s $DOTFILES/phpactor $XDG_CONFIG_HOME/phpactor

rm -rf $XDG_CONFIG_HOME/alacritty
ln -s $DOTFILES/alacritty $XDG_CONFIG_HOME/alacritty


rm -rf $XDG_CONFIG_HOME/zsh
mkdir -p $ZSH_CACHE_DIR
ln -s $DOTFILES/zsh/config $XDG_CONFIG_HOME/zsh

if [ ! -L $HOME/.zshenv ]; then
    ln -s $DOTFILES/zsh/.zshenv $HOME/.zshenv
fi