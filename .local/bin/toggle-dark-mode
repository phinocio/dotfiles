#!/usr/bin/env bash

MODE=$(gsettings get org.gnome.desktop.interface color-scheme | tr -d "'" )

if  [ "$MODE" = "prefer-light" ]; then
	notify-send --app-name="dark-toggle" --icon=/usr/share/icons/hicolor/scalable/status/weather-clear-night-large.svg "Changing to Dark Mode"
	gsettings set org.gnome.desktop.interface color-scheme "prefer-dark"
	gsettings set org.gnome.desktop.interface gtk-theme "Adwaita-dark"
	makoctl set-mode dark
else
	notify-send --app-name="dark-toggle" --icon=/usr/share/icons/hicolor/scalable/status/weather-clear-large.svg "Changing to Light Mode"
	gsettings set org.gnome.desktop.interface color-scheme "prefer-light"
	gsettings set org.gnome.desktop.interface gtk-theme "Adwaita"
	makoctl set-mode light
fi
